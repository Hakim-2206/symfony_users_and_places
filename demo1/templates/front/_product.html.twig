<div class="col-3">
    <div class="card mb-3">
        <h3 class="card-header">{{ product.name }}</h3>
        <img src="{{ product.picture }}" class="img-fluid">
        <div class="card-body">
            <p class="">{{ product.price }}</p>
            <p>Catégorie : {{ product.category.name }}</p>
            <a class="btn btn-success" href="{{ path('app_product_detail',{slug:product.slug}) }}">Détails</a>
        </div>

    </div>
</div>