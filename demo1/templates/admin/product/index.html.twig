{% extends 'admin.html.twig' %}

{% block title %}Tous les produits{% endblock %}

{% block body %}
<a href="{{ path('app_admin_product_add') }}" class="btn btn-primary">Ajouter</a>
<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>Nom</th>
            <th>Image</th>
            <th>Slug</th>
            <th>Date de cr√©ation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td><img src="{{ product.picture }}" width="100"></td>
            <td>{{ product.slug }}</td>
